#!/bin/bash

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

# Get script directory
SCRIPT_DIR="$(dirname "${BASH_SOURCE[0]}")"
DOTFILES_DIR="$(dirname "$SCRIPT_DIR")/dotfiles"

# Function to backup and link dotfiles
backup_and_link() {
    local file="$1"
    local target="$HOME/$(basename "$file")"
    
    # If file exists and is not a symlink, create backup
    if [ -f "$target" ] && [ ! -L "$target" ]; then
        echo -e "${YELLOW}Backing up existing ${target} to ${target}.backup${NC}"
        mv "$target" "${target}.backup"
    fi

    # Remove existing symlink if it exists
    if [ -L "$target" ]; then
        rm "$target"
    fi

    # Create hard link
    echo -e "${GREEN}Creating hard link for $(basename "$file")${NC}"
    ln "$file" "$target"
}

# Main installation
echo -e "${GREEN}Installing dotfiles...${NC}"

# Check if dotfiles directory exists
if [ ! -d "$DOTFILES_DIR" ]; then
    echo -e "${RED}Error: dotfiles directory not found${NC}"
    return 1
fi

# Process all dotfiles
for file in "$DOTFILES_DIR"/.*; do
    # Skip . and .. and any backup files
    if [ "$(basename "$file")" = "." ] || \
       [ "$(basename "$file")" = ".." ] || \
       [[ "$(basename "$file")" == ".bash_env.*" ]] || \
       [[ "$(basename "$file")" == *.backup ]]; then
        continue
    fi

    backup_and_link "$file"
done

# Special handling for .bash_env.private
if [ -f "$DOTFILES_DIR/.bash_env.public" ]; then
    if [ ! -f "$HOME/.bash_env.private" ]; then
        echo -e "${YELLOW}Creating .bash_env.private from template${NC}"
        cp "$DOTFILES_DIR/.bash_env.public" "$HOME/.bash_env.private"
        echo -e "${YELLOW}Please edit ~/.bash_env.private with your personal settings${NC}"
    elif [ $(wc -l < "$DOTFILES_DIR/.bash_env.public") -gt $(wc -l < "$HOME/.bash_env.private") ]; then
        # $HOME/.bash_env.private exists, but dotfiles/.bash_env.public is longer than .bash_env.private
        echo -e "${YELLOW}.bash_env.public has been updated, please merge the changes into .bash_env.private${NC}"
    fi
fi

# Link sshrc
ln "$DOTFILES_DIR/../sshrc" "$HOME/.local/bin/sshrc"
echo -e "${GREEN}Linked sshrc to $HOME/.local/bin/sshrc${NC}"

# Source .bashrc
source "$HOME/.bashrc"
echo -e "${GREEN}Sourced .bashrc${NC}"

echo -e "${GREEN}Installation complete!${NC}"
echo -e "${YELLOW}Note: You may need to source ~/.bashrc or restart your terminal${NC}"
